@page "/login"
@page "/login/{ErrorMessage}"
@attribute [AllowAnonymous]
@inject NavigationManager nvManager

<h3>Bienvenido</h3>

@if(ErrorMessage != null)
{
    <div class="text-danger">@ErrorMessage</div>
}

<form method="post" action="/account/login">
    <div class="form-group">
        <label><b>Usuario:</b></label>
        <input type="text" name="Codigo" placeholder="Nombre de usuario" class="form-control col-sm-6 col-md-4" />
    </div> 
    <div class="form-group">
        <label><b>Clave:</b></label>
        <input type="password" name="Clave" placeholder="Contraseña" class="form-control col-sm-6 col-md-4" />
       
        <br />
    </div>

    <button type="submit" class="btn btn-primary btn-block mt-3" id="loginbtn">Acceder</button>
      
</form>

@code {
    [Parameter] public string ErrorMessage { get; set; }
}
